<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/sfondologin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_undraw_outer_space_re_u9vd_1"></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/roketto"
        android:fontFamily="@font/montserratbold"
        android:textSize="48sp"
        android:textColor="@color/white"
        android:layout_marginTop="150dp"
        android:id="@+id/titlelogin"
        >
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/rokettogiappo"
        android:fontFamily="@font/montserratbold"
        android:textSize="32sp"
        android:textColor="@color/white"
        android:layout_marginTop="6dp"
        android:id="@+id/descrlogin"
        android:layout_below="@id/titlelogin"
        >
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/rokettotag"
        android:textStyle="italic"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:layout_marginTop="6dp"
        android:id="@+id/taglogin"
        android:layout_below="@id/descrlogin"
        >
    </TextView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/taglogin"
        android:layout_marginTop="32dp"
        android:id="@+id/cardSignup"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="16dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/signin_txt"
                android:fontFamily="@font/montserratbold"
                android:textSize="32sp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                android:id="@+id/txtSignup"
                >

            </TextView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_akar_icons_person"
                android:layout_below="@id/txtSignup"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="8dp"

                android:id="@+id/iconPerson"
                >
            </ImageView>

            <EditText
                android:id="@+id/editEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtSignup"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="32dp"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@+id/iconPerson"
                android:hint="@string/email_hint"></EditText>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_ri_lock_password_line"
                android:layout_below="@id/iconPerson"
                android:layout_marginTop="32dp"
                android:layout_marginLeft="8dp"
                android:id="@+id/iconPassword"
                >
            </ImageView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/iconPerson"
                android:layout_below="@id/editEmail"
                android:layout_marginRight="32dp"
                android:layout_marginLeft="16dp"
                android:hint="@string/password_hint"
                android:id="@+id/editPassword"
                android:inputType="textPassword"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="32dp"
                >
            </EditText>



        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_below="@+id/cardSignup"
        android:layout_marginTop="32dp"
        android:text="@string/signin_txt"
        android:textAllCaps="false"
        android:id="@+id/btnSignup"
        ></Button>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSignup"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="32dp"
        android:clickable="true"
        android:text="@string/tagsignup"
        android:gravity="center"
        android:selectAllOnFocus="false"
        android:linksClickable="false"
        android:autoLink="all"
        android:id="@+id/linkLogin"
        android:layout_marginBottom="32dp"
        android:textColor="@color/black">

    </TextView>

</RelativeLayout>
</ScrollView>